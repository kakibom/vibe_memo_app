{
  "name": "my-productivity-app",
  "version": "1.0.0",
  "description": "Markdown Memo + Todo + ChatGPT App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Me",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@toast-ui/editor": "^3.2.2",
    "sortablejs": "^1.15.0",
    "split.js": "^1.6.5"
  },
  "build": {
    "appId": "com.my-productivity-app.id",
    "productName": "my-memo-app",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache/**/*"
    ]
  }
}
